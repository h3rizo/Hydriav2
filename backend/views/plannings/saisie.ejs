    // Auto-save functionality avec debouncing am√©lior√©
    function setupAutoSave() {
        console.log('üíæ Configuration de la sauvegarde automatique');
        
        // Fonction de debouncing pour √©viter trop d'appels
        function debouncedSave(planningId) {
            if (saveTimeout) {
                clearTimeout(saveTimeout);
            }
            
            saveTimeout = setTimeout(() => {
                savePlanningRow(planningId);
            }, 1000); // Attendre 1 seconde apr√®s la derni√®re modification
        }
        
        // √âcouter les changements sur tous les inputs du tableau
        document.addEventListener('change', function(e) {
            if (e.target.classList.contains('cell-input')) {
                const row = e.target.closest('tr');
                if (row && row.dataset.id) {
                    console.log(`üîÑ Changement d√©tect√© sur planning ${row.dataset.id}`);
                    debouncedSave(row.dataset.id);
                }
            }
        });
        
        // √âcouter aussi les √©v√©nements blur pour les champs texte
        document.addEventListener('blur', function(e) {
            if (e.target.classList.contains('cell-input') && e.target.type === 'text') {
                const row = e.target.closest('tr');
                if (row && row.dataset.id) {
                    console.log(`üì§ Blur d√©tect√© sur planning ${row.dataset.id}`);
                    debouncedSave(row.dataset.id);
                }
            }
        }, true);
    }

    // Fonction de sauvegarde corrig√©e
    function savePlanningRow(planningId) {
        const row = document.querySelector(`tr[data-id="${planningId}"]`);
        if (!row) {
            console.error(`‚ùå Ligne planning introuvable pour ID: ${planningId}`);
            return;
        }
        
        console.log(`üíæ Tentative de sauvegarde pour planning ID: ${planningId}`);
        
        // S√©lecteurs corrig√©s pour r√©cup√©rer les bonnes donn√©es
        const dateInput = row.querySelector('input[type="date"]');
        const employeeSelect = row.querySelector('select[data-employee]');
        const ouvrageSelect = row.querySelector('td:nth-child(4) select'); // 4√®me colonne = Ouvrage
        const activiteSelect = row.querySelector('td:nth-child(5) select'); // 5√®me colonne = Activit√©
        const remarqueInput = row.querySelector('td:nth-child(6) input[type="text"]'); // 6√®me colonne = Remarques
        
        // V√©rification que tous les √©l√©ments existent
        if (!dateInput || !employeeSelect || !ouvrageSelect || !activiteSelect || !remarqueInput) {
            console.error('‚ùå √âl√©ments du formulaire introuvables:', {
                dateInput: !!dateInput,
                employeeSelect: !!employeeSelect,
                ouvrageSelect: !!ouvrageSelect,
                activiteSelect: !!activiteSelect,
                remarqueInput: !!remarqueInput
            });
            return;
        }
        
        // Collecte des donn√©es avec validation
        const planningData = {
            ID: parseInt(planningId),
            Date: dateInput.value || null,
            EmployeID: parseInt(employeeSelect.value) || null,
            OuvrageID: parseInt(ouvrageSelect.value) || null,
            ActiviteID: parseInt(activiteSelect.value) || null,
            Remarque: remarqueInput.value || null
        };
        
        console.log('üìã Donn√©es √† sauvegarder:', planningData);
        
        // Validation basique
        if (!planningData.Date || !planningData.EmployeID) {
            console.warn('‚ö†Ô∏è Donn√©es incompl√®tes - sauvegarde annul√©e');
            showVisualFeedback(row, 'warning');
            return;
        }
        
        // Indicateur de sauvegarde en cours
        showVisualFeedback(row, 'saving');
        
        // Appel AJAX avec gestion d'erreur am√©lior√©e
        fetch('/api/plannings/update', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'Accept': 'application/json'
            },
            body: JSON.stringify(planningData)
        })
        .then(response => {
            console.log('üì° R√©ponse serveur:', response.status, response.statusText);
            
            if (!response.ok) {
                throw new Error(`Erreur HTTP: ${response.status} ${response.statusText}`);
            }
            
            return response.json();
        })
        .then(data => {
            console.log('‚úÖ R√©ponse JSON:', data);
            
            if (data.success) {
                console.log('üéâ Sauvegarde r√©ussie');
                showVisualFeedback(row, 'success');
                updateLastUpdate();
            } else {
                console.error('‚ùå Erreur m√©tier:', data.error || data.message);
                showVisualFeedback(row, 'error');
                
                // Afficher un message d'erreur √† l'utilisateur
                if (data.error) {
                    showErrorAlert(`Erreur de sauvegarde: ${data.error}`);
                }
            }
        })
        .catch(error => {
            console.error('üí• Erreur compl√®te:', error);
            showVisualFeedback(row, 'error');
            
            // Gestion sp√©cifique des erreurs r√©seau
            if (error.name === 'TypeError' && error.message.includes('fetch')) {
                showErrorAlert('Erreur de connexion - v√©rifiez votre r√©seau');
            } else if (error.message.includes('404')) {
                showErrorAlert('Route de sauvegarde introuvable sur le serveur');
            } else {
                showErrorAlert(`Erreur de sauvegarde: ${error.message}`);
            }
        });
    }

    // Fonction pour afficher un feedback visuel am√©lior√©
    function showVisualFeedback(row, type) {
        // R√©initialiser les styles pr√©c√©dents
        row.style.backgroundColor = '';
