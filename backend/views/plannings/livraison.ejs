<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Livraison Mat√©riel - Soakoja</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/header', {pageTitle: 'Livraison Mat√©riel'}) %>
    
    <div class="main-content with-sidebar">
        <div class="container">
            <div class="page-header">
                <h1>üöö Livraison de Mat√©riel</h1>
                <p>G√©rer les livraisons de mat√©riel pour les activit√©s</p>
            </div>

            <div class="form-container">
                <form method="POST" action="/plannings/livraison">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="planning">Planning concern√© *</label>
                            <select id="planning" name="planningID" class="form-control" required>
                                <option value="">-- S√©lectionner un planning --</option>
                                <% if (typeof plannings !== 'undefined' && plannings.length > 0) { %>
                                    <% plannings.forEach(plan => { %>
                                        <option value="<%= plan.ID %>">
                                            <%= new Date(plan.Date).toLocaleDateString('fr-FR') %> - 
                                            <%= plan.Employe ? (plan.Employe.Surnom || plan.Employe.Nom) : 'N/A' %> - 
                                            <%= plan.Activite ? plan.Activite.Nom : 'N/A' %>
                                        </option>
                                    <% }); %>
                                <% } %>
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="dateLivraison">Date de livraison *</label>
                            <input type="date" id="dateLivraison" name="dateLivraison" class="form-control" required
                                   value="<%= new Date().toISOString().split('T')[0] %>">
                        </div>
                    </div>

                    <h3>Mat√©riels √† livrer</h3>
                    <div id="materielsList">
                        <div class="materiel-row">
                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    <label>Mat√©riel</label>
                                    <input type="text" name="materiels[0][nom]" class="form-control" required>
                                </div>
                                <div class="form-group col-md-3">
                                    <label>Quantit√©</label>
                                    <input type="number" name="materiels[0][quantite]" class="form-control" min="1" required>
                                </div>
                                <div class="form-group col-md-3">
                                    <label>Prix unitaire (Ar)</label>
                                    <input type="number" name="materiels[0][prix]" class="form-control" step="0.01" min="0">
                                </div>
                                <div class="form-group col-md-2">
                                    <label>&nbsp;</label>
                                    <button type="button" class="btn btn-danger btn-remove" disabled>Retirer</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <button type="button" id="addMateriel" class="btn btn-info">
                        <span>‚ûï</span> Ajouter un mat√©riel
                    </button>

                    <div class="form-group" style="margin-top: 20px;">
                        <label for="notes">Notes</label>
                        <textarea id="notes" name="notes" class="form-control" rows="3"></textarea>
                    </div>

                    <div class="form-buttons">
                        <button type="submit" class="btn btn-primary">
                            <span>‚úÖ</span> Valider la livraison
                        </button>
                        <a href="/dashboard" class="btn btn-secondary">
                            <span>‚ùå</span> Annuler
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        let materielCount = 0;
        
        document.getElementById('addMateriel').addEventListener('click', function() {
            materielCount++;
            const materielsDiv = document.getElementById('materielsList');
            const newRow = document.createElement('div');
            newRow.className = 'materiel-row';
            newRow.innerHTML = `
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <input type="text" name="materiels[${materielCount}][nom]" class="form-control" required>
                    </div>
                    <div class="form-group col-md-3">
                        <input type="number" name="materiels[${materielCount}][quantite]" class="form-control" min="1" required>
                    </div>
                    <div class="form-group col-md-3">
                        <input type="number" name="materiels[${materielCount}][prix]" class="form-control" step="0.01" min="0">
                    </div>
                    <div class="form-group col-md-2">
                        <button type="button" class="btn btn-danger btn-remove" onclick="removeMateriel(this)">Retirer</button>
                    </div>
                </div>
            `;
            materielsDiv.appendChild(newRow);
        });

        function removeMateriel(button) {
            button.closest('.materiel-row').remove();
        }
    </script>
</body>
</html>
