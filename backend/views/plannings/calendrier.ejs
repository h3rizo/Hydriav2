<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %> - Soakoja</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .calendar-container {
            background: var(--bg-secondary);
            padding: 1.5rem;
            border-radius: 10px;
            box-shadow: 0 5px 15px var(--shadow-color);
        }
        .calendar-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
            padding-bottom: 1rem;
            border-bottom: 2px solid var(--border-color);
        }
        .calendar-header h2 {
            margin: 0;
            font-size: 1.8rem;
        }
        .calendar-grid {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            gap: 5px;
        }
        .day-header, .day-cell {
            padding: 0.5rem;
            border-radius: 5px;
        }
        .day-header {
            font-weight: bold;
            text-align: center;
            background: var(--bg-tertiary);
        }
        .day-cell {
            border: 1px solid var(--border-color);
            min-height: 120px;
            display: flex;
            flex-direction: column;
        }
        .day-cell.other-month {
            background-color: var(--bg-tertiary);
            color: var(--text-secondary);
        }
        .day-number {
            font-weight: bold;
            margin-bottom: 0.5rem;
        }
        .event {
            background-color: var(--accent-color);
            color: var(--text-on-accent);
            padding: 0.25rem 0.5rem;
            border-radius: 3px;
            font-size: 0.8rem;
            margin-bottom: 3px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        .event a {
            color: inherit;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <%- include('../partials/navbar', { user: user }) %>

    <div class="container">
        <div class="page-header">
            <h1><%= pageTitle %></h1>
        </div>

        <%
            const monthNames = ["Janvier", "Février", "Mars", "Avril", "Mai", "Juin", "Juillet", "Août", "Septembre", "Octobre", "Novembre", "Décembre"];
            const daysInMonth = new Date(year, month + 1, 0).getDate();
            const firstDayOfMonth = new Date(year, month, 1).getDay();
            const startDay = (firstDayOfMonth === 0) ? 6 : firstDayOfMonth - 1;
            const prevMonth = new Date(year, month, 0);
            const nextMonth = new Date(year, month + 2, 0);
        %>

        <div class="calendar-container">
            <div class="calendar-header">
                <a href="/plannings/calendrier?year=<%= prevMonth.getFullYear() %>&month=<%= prevMonth.getMonth() + 1 %>" class="btn btn-secondary">‹ <%= monthNames[prevMonth.getMonth()] %></a>
                <h2><%= monthNames[month] %> <%= year %></h2>
                <a href="/plannings/calendrier?year=<%= nextMonth.getFullYear() %>&month=<%= nextMonth.getMonth() + 1 %>" class="btn btn-secondary"><%= monthNames[nextMonth.getMonth()] %> ›</a>
            </div>

            <div class="calendar-grid">
                <div class="day-header">Lun</div><div class="day-header">Mar</div><div class="day-header">Mer</div><div class="day-header">Jeu</div><div class="day-header">Ven</div><div class="day-header">Sam</div><div class="day-header">Dim</div>
                <% for (let i = 0; i < startDay; i++) { %><div class="day-cell other-month"></div><% } %>
                <% for (let day = 1; day <= daysInMonth; day++) { %>
                    <div class="day-cell">
                        <div class="day-number"><%= day %></div>
                        <% if (eventsByDay[day]) { %>
                            <% eventsByDay[day].forEach(event => { %>
                                <div class="event" title="<%= event.remarque %> - <%= event.Employe.prenom %>">
                                    <a href="/plannings/<%= event.id %>/details"><%= event.Employe.prenom %>: <%= event.remarque ? event.remarque.substring(0, 10) + '...' : 'Activité' %></a>
                                </div>
                            <% }) %>
                        <% } %>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>
</body>
</html>