<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof pageTitle !== 'undefined' ? pageTitle : 'Soakoja' %> - HydriaV2</title>
    <link rel="stylesheet" href="/css/style.css">
    <% if (typeof extraStyles !== 'undefined') { %>
        <%- extraStyles %>
    <% } %>
</head>
<body>
    <% if (typeof user !== 'undefined' && user) { %>
        <%- include('partials/header') %>
    <% } %>
    
    <div class="main-content <%= typeof user !== 'undefined' && user ? 'with-sidebar' : '' %>">
        <%- body %>
    </div>

    <% if (typeof extraScripts !== 'undefined') { %>
        <%- extraScripts %>
    <% } %>
</body>
</html>