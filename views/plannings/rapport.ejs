<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= pageTitle %> - Soakoja
    </title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .filters-container {
            background: var(--bg-secondary);
            padding: 1.5rem;
            border-radius: 10px;
            box-shadow: 0 5px 15px var(--shadow-color);
            margin-bottom: 2rem;
        }

        .filters-form {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            align-items: end;
        }

        .filters-form .form-group {
            margin: 0;
        }

        .filters-form .btn {
            height: fit-content;
        }
    </style>
</head>

<body>
    <%- include('../partials/navbar', { user: user }) %>

    <div class="container">
        <div class="page-header">
            <h1><%= pageTitle %></h1>
        </div>

        <% if (typeof error !=='undefined' && error) { %>
            <div class="error-box">
                <p><strong>Erreur :</strong> <%= error %></p>
            </div>
        <% } %>

        <div class="filters-container">
            <form class="filters-form" method="GET" action="/plannings/rapport">
                <div class="form-group">
                    <label for="dateDebut">Date de début</label>
                    <input type="date" id="dateDebut" name="dateDebut" value="<%= filters.dateDebut || '' %>">
                </div>
                <div class="form-group">
                    <label for="dateFin">Date de fin</label>
                    <input type="date" id="dateFin" name="dateFin" value="<%= filters.dateFin || '' %>">
                </div>
                <div class="form-group">
                    <label for="employeId">Employé</label>
                    <select id="employeId" name="employeId">
                        <option value="">Tous les employés</option>
                        <% employes.forEach(e => { %>
                            <option value="<%= e.id %>" <%= parseInt(filters.employeId) === e.id ? 'selected' : '' %>>
                                <%= e.prenom %> <%= e.nom %>
                            </option>
                        <% }) %>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Filtrer</button>
            </form>
        </div>

        <div class="table-container">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Employé</th>
                        <th>Ouvrage</th>
                        <th>Activité</th>
                        <th>Remarque</th>
                        <th>Statut</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (plannings.length > 0) { %>
                        <% plannings.forEach(p => { %>
                            <tr>
                                <td><%= new Date(p.date).toLocaleDateString('fr-FR') %></td>
                                <td><%= p.Employe ? `${p.Employe.prenom} ${p.Employe.nom}` : 'N/A' %></td>
                                <td><%= p.Ouvrage ? p.Ouvrage.nom : 'N/A' %></td>
                                <td><%= p.Activite ? p.Activite.nom : 'N/A' %></td>
                                <td><%= p.remarque || '-' %></td>
                                <td>
                                    <span class="status <%= p.estvalide ? 'validated' : 'pending' %>">
                                        <%= p.estvalide ? 'Validé' : 'En attente' %>
                                    </span>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="6" class="empty-state">
                                Aucun planning trouvé pour les filtres sélectionnés.
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
    <%- include('../partials/footer') %>
</body>
</html>
