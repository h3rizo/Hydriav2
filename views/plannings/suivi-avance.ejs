<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %> - Soakoja</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .status-demande { background: #e3f2fd; color: #0d6efd; }
        .status-approuvee { background: #d4edda; color: #155724; }
        .status-rejetee { background: #f8d7da; color: #721c24; }

        .action-buttons {
            display: flex;
            gap: 0.5rem;
        }
        .action-buttons form {
            margin: 0;
        }
        .message-box {
            padding: 1rem;
            border-radius: 5px;
            margin-bottom: 1.5rem;
            font-weight: bold;
        }
        .success-box {
            background-color: #d4edda;
            color: #155724;
            border-left: 5px solid #c3e6cb;
        }
        .error-box {
            background-color: #f8d7da;
            color: #721c24;
            border-left: 5px solid #f5c6cb;
        }
    </style>
</head>
<body>
    <%- include('../partials/navbar', { user: user }) %>

    <div class="container">
        <div class="page-header">
            <h1><%= pageTitle %></h1>
            <a href="/plannings/avances" class="btn btn-primary">+ Nouvelle demande</a>
        </div>

        <% if (typeof success !== 'undefined' && success) { %>
            <div class="message-box success-box"><%= success %></div>
        <% } %>
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="message-box error-box"><%= error %></div>
        <% } %>

        <div class="table-container">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Employé</th>
                        <th>Date Demande</th>
                        <th>Montant (Ar)</th>
                        <th>Motif</th>
                        <th>Statut</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (avances.length > 0) { %>
                        <% avances.forEach(avance => { %>
                            <tr>
                                <td><%= avance.employes ? `${avance.employes.prenom} ${avance.employes.nom}` : 'N/A' %></td>
                                <td><%= new Date(avance.date_demande).toLocaleDateString('fr-FR') %></td>
                                <td><%= new Intl.NumberFormat('fr-FR').format(avance.montant) %></td>
                                <td><%= avance.motif %></td>
                                <td>
                                    <span class="status status-<%= avance.statut.toLowerCase() %>">
                                        <%= avance.statut %>
                                    </span>
                                </td>
                                <td>
                                    <% if (avance.statut === 'Demandée') { %>
                                        <div class="action-buttons">
                                            <form method="POST" action="/plannings/suivi-avance/<%= avance.id %>/update-status">
                                                <input type="hidden" name="statut" value="Approuvée">
                                                <button type="submit" class="btn btn-sm btn-success">Approuver</button>
                                            </form>
                                            <form method="POST" action="/plannings/suivi-avance/<%= avance.id %>/update-status">
                                                <input type="hidden" name="statut" value="Rejetée">
                                                <button type="submit" class="btn btn-sm btn-warning">Rejeter</button>
                                            </form>
                                        </div>
                                    <% } else { %>
                                        -
                                    <% } %>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="6" class="empty-state">
                                Aucune demande d'avance pour le moment.
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <%- include('../partials/footer') %>
</body>
</html>