<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestion des Employ√©s - Soakoja</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/header', {pageTitle: 'Gestion des Employ√©s'}) %>
    
    <div class="main-content with-sidebar">
        <div class="container">
            <div class="page-header">
                <h1>üë• Gestion des Employ√©s</h1>
                <p>Administrer les comptes et informations des employ√©s</p>
            </div>

            <div class="action-bar">
                <button onclick="openAddEmployeeModal()" class="btn btn-primary">
                    <span>‚ûï</span> Nouvel employ√©
                </button>
                <button onclick="exportEmployees()" class="btn btn-info">
                    <span>üì•</span> Exporter CSV
                </button>
            </div>

            <div class="table-container">
                <table class="data-table" id="employeesTable">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom complet</th>
                            <th>Surnom</th>
                            <th>Poste</th>
                            <th>Base</th>
                            <th>Date embauche</th>
                            <th>Statut</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (typeof employes !== 'undefined' && employes.length > 0) { %>
                            <% employes.forEach(emp => { %>
                                <tr>
                                    <td><%= emp.ID %></td>
                                    <td><%= emp.Prenom %> <%= emp.Nom %></td>
                                    <td><%= emp.Surnom %></td>
                                    <td><%= emp.Poste ? emp.Poste.NomPoste : 'N/A' %></td>
                                    <td><%= emp.Base ? emp.Base.Nom : 'N/A' %></td>
                                    <td><%= emp.DateEmbauchage ? new Date(emp.DateEmbauchage).toLocaleDateString('fr-FR') : 'N/A' %></td>
                                    <td>
                                        <% if (!emp.DateDebauchage) { %>
                                            <span class="badge badge-success">Actif</span>
                                        <% } else { %>
                                            <span class="badge badge-danger">Inactif</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <button onclick="editEmployee(<%= emp.ID %>)" class="btn btn-sm btn-info">Modifier</button>
                                        <button onclick="resetPassword(<%= emp.ID %>)" class="btn btn-sm btn-warning">R√©initialiser MDP</button>
                                        <% if (!emp.DateDebauchage) { %>
                                            <button onclick="deactivateEmployee(<%= emp.ID %>)" class="btn btn-sm btn-danger">D√©sactiver</button>
                                        <% } else { %>
                                            <button onclick="activateEmployee(<%= emp.ID %>)" class="btn btn-sm btn-success">R√©activer</button>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="8" class="empty-state">Aucun employ√© trouv√©</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Modal pour ajouter/modifier un employ√© -->
    <div id="employeeModal" class="modal" style="display: none;">
        <div class="modal-content">
            <span class="close" onclick="closeModal()">&times;</span>
            <h2 id="modalTitle">Nouvel Employ√©</h2>
            <form id="employeeForm">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Pr√©nom *</label>
                        <input type="text" name="prenom" required>
                    </div>
                    <div class="form-group col-md-6">
                        <label>Nom *</label>
                        <input type="text" name="nom" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Surnom (login) *</label>
                        <input type="text" name="surnom" required>
                    </div>
                    <div class="form-group col-md-6">
                        <label>Mot de passe *</label>
                        <input type="password" name="motDePasse" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Poste</label>
                        <select name="posteID">
                            <option value="">-- S√©lectionner --</option>
                            <% if (typeof postes !== 'undefined') { %>
                                <% postes.forEach(poste => { %>
                                    <option value="<%= poste.ID %>"><%= poste.NomPoste %></option>
                                <% }); %>
                            <% } %>
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <label>Base</label>
                        <select name="baseID">
                            <option value="">-- S√©lectionner --</option>
                            <% if (typeof bases !== 'undefined') { %>
                                <% bases.forEach(base => { %>
                                    <option value="<%= base.ID %>"><%= base.Nom %></option>
                                <% }); %>
                            <% } %>
                        </select>
                    </div>
                </div>
                <div class="form-buttons">
                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                    <button type="button" onclick="closeModal()" class="btn btn-secondary">Annuler</button>
                </div>
            </form>
        </div>
    </div>

    <style>
        .action-bar {
            margin-bottom: 20px;
            display: flex;
            gap: 10px;
        }
        .modal {
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.5);
        }
        .modal-content {
            background-color: white;
            margin: 5% auto;
            padding: 30px;
            border-radius: 10px;
            width: 80%;
            max-width: 600px;
        }
        .close {
            float: right;
            font-size: 28px;
            font-weight: bold;
            cursor: pointer;
        }
        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
            margin-bottom: 15px;
        }
    </style>

    <script>
        function openAddEmployeeModal() {
            document.getElementById('modalTitle').textContent = 'Nouvel Employ√©';
            document.getElementById('employeeModal').style.display = 'block';
        }

        function closeModal() {
            document.getElementById('employeeModal').style.display = 'none';
            document.getElementById('employeeForm').reset();
        }

        function editEmployee(id) {
            // Impl√©menter la logique d'√©dition
            alert('√âdition de l\'employ√© ID: ' + id);
        }

        function resetPassword(id) {
            if (confirm('R√©initialiser le mot de passe de cet employ√© ?')) {
                window.location.href = `/admin/employes/reset-password/${id}`;
            }
        }

        function deactivateEmployee(id) {
            if (confirm('D√©sactiver cet employ√© ?')) {
                window.location.href = `/admin/employes/deactivate/${id}`;
            }
        }

        function activateEmployee(id) {
            if (confirm('R√©activer cet employ√© ?')) {
                window.location.href = `/admin/employes/activate/${id}`;
            }
        }

        function exportEmployees() {
            window.location.href = '/admin/employes/export';
        }

        // Soumission du formulaire
        document.getElementById('employeeForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData);
            
            try {
                const response = await fetch('/admin/employes/add', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });
                
                if (response.ok) {
                    alert('Employ√© ajout√© avec succ√®s');
                    location.reload();
                } else {
                    alert('Erreur lors de l\'ajout');
                }
            } catch (error) {
                alert('Erreur: ' + error.message);
            }
        });
    </script>
</body>
</html>
